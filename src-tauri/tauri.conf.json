{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "VRChime",
    "version": "0.3.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": false,
        "readDir": true,
        "readFile": true,
        "scope": [
          "**"
        ]
      },
      "dialog": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "VRChime: v0.3.0 - By Nestor VRC (@pyyupsk)",
        "theme": "Dark",
        "width": 800,
        "height": 600,
        "fullscreen": false,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.vrchime.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}